# Overlay Image Server Environment Variables
# Copy this file to .env and update the values for your environment

# Server Configuration
OVERLAY_PORT=8080

# API Security
# Generate a secure random string for production use
# You can use: openssl rand -hex 32
OVERLAY_API_KEY=your-secure-api-key-here-change-this-in-production

# API Key Validation
# Set to 'false' to disable API key validation (NOT recommended for production)
# Default is 'true' (enabled) for security
OVERLAY_REQUIRE_API_KEY=true

# Domain and paths
BASE_URL=https://your-domain.tld #not used anymore
OVERLAY_DOMAIN=overlay.your-domain.tld
MEDIA_DIR=./media
REELS_SUBDIR=reels
TMP_SUBDIR=tmp
BG_DIR=./assets/reels_bg